{% extends 'base1.html.twig' %}

{% block title %}Utilisateurs index{% endblock %}

{% block body %}
    <h1>Utilisateurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDeNaissance</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Login</th>
                <th>MotDePasse</th>
                <th>Email</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.dateDeNaissance ? utilisateur.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.type }}</td>
                <td>{{ utilisateur.login }}</td>
                <td>{{ utilisateur.motDePasse }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.etat }}</td>
                <td>
                    <a href="{{ path('utilisateurs_show', {'id': utilisateur.id}) }}">show</a>
                    <a href="{{ path('utilisateurs_edit', {'id': utilisateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('utilisateurs_new') }}">Create new</a>
{% endblock %}
